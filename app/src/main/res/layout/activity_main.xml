<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/Parent"
    android:background="@color/purple_200">

    <ImageView
        android:id="@+id/QMark_image"
        android:layout_width="392dp"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:src="@drawable/quizetext" />

    <TextView
        android:id="@+id/choose_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/QMark_image"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="90dp"
        android:layout_marginEnd="85dp"
        android:fontFamily="@font/kanit_medium"
        android:text="choose your topic"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:elevation="20dp"/>

    <LinearLayout
        android:id="@+id/FirstTopic"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_below="@id/choose_text"
        android:background="@drawable/rounded_white_rec"
        android:layout_marginLeft="40dp"
        android:elevation="20dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/java"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="java"
            android:textAllCaps="true"
            android:fontFamily="@font/kanit_black"
            android:textColor="@color/black"
            android:paddingLeft="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/SecondTopic"
        android:layout_toRightOf="@id/FirstTopic"
        android:layout_below="@id/choose_text"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_rec"
        android:layout_marginLeft="30dp"
        android:elevation="20dp">

        <ImageView
            android:layout_width="133dp"
            android:layout_height="99dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/php" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="php"
            android:textAllCaps="true"
            android:fontFamily="@font/kanit_black"
            android:textColor="@color/black"
            android:paddingLeft="65dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ThirdTopic"
        android:layout_alignEnd="@id/FirstTopic"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_below="@id/FirstTopic"
        android:background="@drawable/rounded_white_rec"
        android:layout_marginLeft="40dp"
        android:elevation="20dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/c"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="c++"
            android:textAllCaps="true"
            android:fontFamily="@font/kanit_black"
            android:textColor="@color/black"
            android:paddingLeft="70dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ForthTopic"
        android:layout_toRightOf="@id/ThirdTopic"
        android:layout_below="@id/SecondTopic"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_rec"
        android:elevation="20dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/python"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="python"
            android:textAllCaps="true"
            android:fontFamily="@font/kanit_black"
            android:textColor="@color/black"
            android:paddingLeft="50dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/Start_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/ForthTopic"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/rounded_btn"
        android:text="start"
        android:textAllCaps="true"
        android:fontFamily="@font/kanit_medium"
        android:textSize="20dp" />

</RelativeLayout>